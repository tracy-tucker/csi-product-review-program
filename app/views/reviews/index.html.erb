<p><%= flash[:error] %></p>

<h1>All Reviews</h1>

<%= link_to "Add new review", new_review_path(@review) if logged_in? %> |
<%= link_to "See user with most reviews", users_user_most_reviews_url %>

<ul>
    <% @reviews.each do |review| %>
        <li><%= review.product.name %>: <%= link_to review.title, review_path(review) %> - <%= review.rating %></li>
    <% end %>
</ul>