<h1>Sign Up!</h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_for(@user) do |f| %>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>

    <%= f.label :password %><br>    <!-- NOT password_digest bc we would be setting the pword to be a raw string -->
    <%= f.password_field :password %><br>

    <%= f.submit "Sign up" %>
<% end %>